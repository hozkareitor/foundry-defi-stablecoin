# RPC URLs - Get these from services like Alchemy, Infura, or Chainstack
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY_HERE
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY_HERE

# Private Keys - NEVER commit real keys! Use environment variables in production
# For Sepolia testnet (with test ETH)
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# For Mainnet (use different key for mainnet!)
MAINNET_PRIVATE_KEY=your_mainnet_private_key_here_without_0x_prefix

# Block explorer API keys (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Optional: CoinMarketCap API key for gas price estimation
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

